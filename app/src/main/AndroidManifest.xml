<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/stocker_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/stocker_app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Stocker"
        android:hardwareAccelerated="true"
        tools:targetApi="31">
        <activity
            android:name="com.rud.stocker.market.MarketLayoutActivity"
            android:exported="false" />
        <activity
            android:name="com.rud.stocker.home.Home_Layout"
            android:exported="false" />
        <activity
            android:name="com.rud.stocker.start.start"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rud.stocker.auth.Log_In_Page"
            android:exported="false" />
        <activity
            android:name="com.rud.stocker.auth.Email_Registration"
            android:exported="true" />
        <activity
            android:name="com.rud.stocker.Portfolio.Portfolio_Layout"
            android:exported="true" />

        <activity
            android:name="com.rud.stocker.Order.Order_Layout"
            android:exported="true" />
        <activity
            android:name="com.rud.stocker.GainerLoser.TopGainerList"
            android:exported="true" />
        <activity
            android:name="com.rud.stocker.GainerLoser.LossList"
            android:exported="true" />
    </application>

</manifest>