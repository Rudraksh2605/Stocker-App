<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/market_back"
    tools:context=".home.Home_Layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/market_back">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/market_back"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stocker_logo"
                android:background="@color/market_back"
                android:layout_gravity="start" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stocker_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stocker"
                android:background="@color/market_back"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:fontFamily="@font/roboto_light" />
        </com.google.android.material.appbar.MaterialToolbar>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            app:dividerColor="@color/darkGrey" />

        <!-- Top Gainer Title -->
        <TextView
            android:id="@+id/TopGainerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider_toolbar"
            android:text="Top Gainer"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="25dp"
            android:background="@color/market_back"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_light"
            android:textStyle="bold" />

        <!-- Top Gainer List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/TopGainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TopGainerTitle"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_stock_card"
            android:background="@color/market_back" />

        <LinearLayout
            android:id="@+id/more_gainer"
            android:layout_below="@+id/TopGainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/market_back"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:id="@+id/below_gainer_1"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/rounded_card_background"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:background="@drawable/rounded_card_background"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/percentage_gain_1"
                        android:text="Percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/stock_name_1"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_light"
                        android:background="@color/market_back"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/stock_name_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock Name"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:background="@color/market_back"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:id="@+id/below_gainer_2"
                android:clickable="true"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/rounded_card_background"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:clickable="true"
                    android:background="@drawable/rounded_card_background"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/percentage_gain_2"
                        android:text="Gainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_below="@+id/stock_name_2"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto_medium"
                        android:background="@color/market_back"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/stock_name_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See More >"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:background="@color/market_back" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/TopLoserTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/more_gainer"
            android:text="Top Loser"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="25dp"
            android:background="@color/market_back"
            android:fontFamily="@font/roboto_light"
            android:textStyle="bold" />

        <!-- Top Loser List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/TopLoser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TopLoserTitle"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_stock_card"
            android:background="@color/market_back" />

        <LinearLayout
            android:id="@+id/more_loser"
            android:layout_below="@+id/TopLoser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/market_back"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:id="@+id/below_loser_1"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/rounded_card_background"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:background="@drawable/rounded_card_background"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/percentage_gain_3"
                        android:text="Percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/stock_name_3"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_light"
                        android:background="@color/market_back"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/stock_name_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock Name"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:background="@color/market_back"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:id="@+id/below_loser_2"
                android:clickable="true"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/rounded_card_background"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:clickable="true"
                    android:background="@drawable/rounded_card_background"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/percentage_gain_4"
                        android:text="Loser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_below="@+id/stock_name_4"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto_medium"
                        android:background="@color/market_back"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/stock_name_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See More >"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:background="@color/market_back" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/trade_actions"
            app:dividerColor="@color/darkGrey"
            />

        <!-- Trading Actions -->
        <LinearLayout
            android:id="@+id/trade_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/market_back">

            <!-- Market Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/market_back"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/market_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/trade"
                    android:background="@drawable/imagebuttonback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Market"
                    android:textColor="@android:color/white"
                    android:background="@color/market_back"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Orders Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:background="@color/market_back"
                android:layout_marginRight="8dp">

                <ImageButton
                    android:id="@+id/order_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/purchase"
                    android:background="@drawable/imagebuttonback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Orders"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/roboto_medium"
                    android:background="@color/market_back"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Home Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/market_back"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/home_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home"
                    android:background="@drawable/imagebuttonback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@android:color/white"
                    android:background="@color/market_back"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Portfolio Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/market_back"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/portfolio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/investment"
                    android:background="@drawable/imagebuttonback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Portfolio"
                    android:background="@color/market_back"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Settings Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/market_back"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/setting_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/settings"
                    android:background="@drawable/imagebuttonback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textColor="@android:color/white"
                    android:background="@color/market_back"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</ScrollView>

