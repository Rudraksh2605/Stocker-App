<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    android:background="@color/white"
    android:elevation="100dp"
    android:minWidth="100dp"
    android:minHeight="100dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp">

            <TextView
                android:id="@+id/text_port"
                android:text="Portfolio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stock_price"
                android:gravity="center"
                android:textSize="30dp"
                android:fontFamily="@font/roboto_medium"
                android:background="@color/white"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_value_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_port"
                android:text="10,00,000"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="20dp"
                android:background="@color/white"
                 />

            <LinearLayout
                android:id="@+id/text_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_value_port"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginStart="18dp"
                android:background="@color/white">


                <TextView
                    android:id="@+id/text_invested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="start"
                    android:text="Invested"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_alignRight="@+id/text_invested"
                    android:gravity="end"
                    android:text="Total Return"
                    android:layout_gravity="end"
                    android:fontFamily="@font/roboto_medium"
                    android:background="@color/white">

                </TextView>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_head"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginStart="18dp"
            android:background="@color/white">


            <TextView
                android:id="@+id/text_invested_amnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:background="@color/white"
                android:fontFamily="@font/roboto_light"
                android:gravity="start"
                android:text="10,00,000"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_current_amnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_alignRight="@+id/text_invested"
                android:gravity="end"
                android:text="0.00%"
                android:textSize="16dp"
                android:layout_gravity="end"
                android:fontFamily="@font/roboto_light"
                android:background="@color/white">

            </TextView>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
